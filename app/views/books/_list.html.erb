      <h2 class="my-3">User info</h2>
      <div>
        <%= image_tag @user.get_profile_image(100, 100) %>
        <table class="table">
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
      </div>
      <%= link_to edit_user_path(@user.id), class:" btn btn-default btn-block btn-outline-dark" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>

      <div>
        <h2 class="my-3">New book</h2>
        <%= form_with model: Book.new, url: books_path, method: :post do |f| %>
        <p>Title</p>
        <%= f.text_field :title, class:"form-control col-xs-12" %>
        <p>Opinion</p>
        <%= f.text_area :body, class:"form-control col-xs-12" %>
        <div class="my-3"><%= f.submit 'Create Book', class:"btn btn-success" %></div>
        <% end %>
      </div>