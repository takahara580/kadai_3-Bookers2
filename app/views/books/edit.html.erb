<div class="container">
  <div class="row">
    
    <div class="col-5 mx-auto">
      <h1 class="my-2"><strong>Editing Book</strong></h1>
      
      <% if @book.errors.any? %>
        <%= @book.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <%= @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
        
      <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title, class:"form-control col-xs-12" %>
      <p class="my-2">Opinion</p>
      <%= f.text_area :body, class:"form-control col-xs-12" %></br>
      <%= f.submit "Update Book", class:"btn btn-success"  %></br>
      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>