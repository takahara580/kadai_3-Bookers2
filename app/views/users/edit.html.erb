<div class="container">
  <div class="row">
    
    <div class="col-5 mx-auto">
      <h1 class="my-2"><strong>User info</strong></h1>
      
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <%= @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
        <% end %>
      
      <%= form_with model: @user do |f| %>
      <label for="inputName">Name</label></br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class:"form-control col-xs-12 "%></br>
      <label for="inputImage">Image</label></br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:"mb-3" %></br>
      <label for="inputBody">Introduction</label></br>
      <%= f.text_area :introduction, class:"form-control col-xs-12 " %></br>
      <%= f.submit "Update User", class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
